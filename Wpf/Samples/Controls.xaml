<Window x:Class="Wpf.Samples.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controls"
        Height="480"
        Width="640">
    <StackPanel>
        <TextBlock Margin="10" 
                   Text="TextBlock" />
        <TextBox Margin="10" 
                 Text="TextBox"/>
        <ComboBox Margin="10">
            <ComboBoxItem Content="Coffie"></ComboBoxItem>
            <ComboBoxItem Content="Tea"></ComboBoxItem>
            <ComboBoxItem Content="Orange Juice"></ComboBoxItem>
            <ComboBoxItem Content="Milk"></ComboBoxItem>
            <ComboBoxItem Content="Iced Tea"></ComboBoxItem>
            <ComboBoxItem Content="Mango Shake"></ComboBoxItem>
        </ComboBox>
        <CheckBox Margin="10">Checkbox</CheckBox>
        <RadioButton Margin="10,10,10,2">RadioButton 1</RadioButton>
        <RadioButton Margin="10,2,10,2">RadioButton 2</RadioButton>
        <RadioButton Margin="10,2,10,10">RadioButton 3</RadioButton>
        <Button Margin="10">Button</Button>
    </StackPanel>
</Window>
