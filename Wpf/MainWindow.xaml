<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrls="clr-namespace:Wpf.Controls"
        xmlns:vmdl="clr-namespace:Wpf.ViewModels"
        Title="SWE 2 - Wpf Samples"
        Height="587"
        Width="764">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="527" Margin="10,10,0,0" VerticalAlignment="Top" Width="730">


            <TabItem Header="Kontakte">
                <DockPanel DataContext="{Binding ContactSearchViewModel}">
                    <GroupBox DockPanel.Dock="Top" Header="Kundensuche" Width="445" Height="130">
                        <Grid Margin="10,20,0,0" Width="483">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="Auto" MinWidth="200" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Vorname"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EingabeVorname}"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Nachname"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EingabeNachname}"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Firma"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EingabeFirma}"/>

                            <Button Grid.Row="2" Grid.Column="2" Content="Kunde Suchen" Margin="5,0,0,0" Command="{Binding SearchCommand}" />
                        </Grid>
                    </GroupBox>
                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Items}" Height="306" Width="671" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Titel" Binding="{Binding Titel}"/>
                            <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname}"/>
                            <DataGridTextColumn Header="Nachname" Binding="{Binding Nachname}" />
                            <DataGridTextColumn Header="Suffix" Binding="{Binding Suffix}"/>
                            <DataGridTextColumn Header="Geburtsdatum" Binding="{Binding Geburtsdatum}"/>
                            <DataGridTextColumn Header="Firma" Binding="{Binding Firmenname}" />
                            <DataGridTextColumn Header="UID" Binding="{Binding UID}" />
                            <DataGridTextColumn Header="Strasse" Binding="{Binding Strasse}"/>
                            <DataGridTextColumn Header="PLZ" Binding="{Binding PLZ}"/>
                            <DataGridTextColumn Header="Ort" Binding="{Binding Ort}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
